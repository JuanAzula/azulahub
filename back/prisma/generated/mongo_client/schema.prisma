generator client {
    provider        = "prisma-client-js"
    previewFeatures = []
    output          = "./generated/mongo_client"
}

datasource db {
    provider = "mongodb"
    url      = env("MONGO_URL")
}

// schema.prisma

model User {
    id       String  @id @default(auto()) @map("_id") @db.ObjectId
    email    String  @unique
    password String
    name     String
    lastName String
    seriesId Int?    @unique
    Series   Series?
}

model Movie {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    releaseYear Int
    poster_img  String
    genre       String
    score       Float
}

model Series {
    id          String  @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    releaseYear Int
    poster_img  String
    genre       Genre?  @relation(fields: [genresId], references: [id])
    genresId    String? @unique @db.ObjectId
    score       Float
    User        User?   @relation(fields: [userId], references: [id])
    userId      String? @unique @db.ObjectId
}

model Genre {
    id     String   @id @default(auto()) @map("_id") @db.ObjectId
    name   String   @unique
    series Series[] // Array of references to series in this genre
}
