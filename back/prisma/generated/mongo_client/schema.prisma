generator client {
    provider        = "prisma-client-js"
    previewFeatures = []
    output          = "./generated/mongo_client"
}

datasource db {
    provider = "mongodb"
    url      = env("MONGO_URL")
}

// schema.prisma

model User {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    email    String @unique
    password String
    name     String
    lastName String
}

model Movie {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    releaseYear Int
    poster_img  String
    genre       String
    score       Float
}

model Series {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    releaseYear Int
    poster_img  String
    genre       String
    score       Float
}

model Genre {
    id   String @id @default(auto()) @map("_id") @db.ObjectId
    name String @unique
}
