generator client {
    provider        = "prisma-client-js"
    previewFeatures = []
    binaryTargets   = ["native", "linux-arm64-openssl-3.0.x"]

    output = "./generated/mongo_client"
}

datasource db {
    provider = "mongodb"
    url      = env("MONGOTEST_URL")
}

model Users {
    id       String   @id @default(auto()) @map("_id") @db.ObjectId
    email    String   @unique
    password String
    name     String
    movies   Movies[]
    series   Series[]
}

model Movies {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    releaseYear Int
    poster_img  String
    genres      Genres @relation(fields: [genresName], references: [name])
    genresName  String
    score       Float
    authorEmail String
    author      Users  @relation(fields: [authorEmail], references: [email])
}

model Series {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    releaseYear Int
    poster_img  String
    genres      Genres @relation(fields: [genresName], references: [name])
    genresName  String
    score       Float
    authorEmail String
    author      Users  @relation(fields: [authorEmail], references: [email])
}

model Genres {
    id     String   @id @default(auto()) @map("_id") @db.ObjectId
    name   String   @unique
    movies Movies[]
    Series Series[]
}
