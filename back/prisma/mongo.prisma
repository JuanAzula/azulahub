generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["driverAdapters"]
    output          = "./generated/mongo_client"
}

datasource db {
    provider = "mongodb"
    url      = env("MONGO_URL")
}

// schema.prisma

model User {
    id       Int     @id @map("_id")
    email    String  @unique
    password String
    name     String
    lastName String
    seriesId Int?    @unique
    Series   Series?
    Movie    Movie[]
}

model Movie {
    id          Int    @id @map("_id")
    title       String
    description String
    releaseYear Int
    poster_img  String
    genre       Genre? @relation(fields: [genresId], references: [id])
    genresId    Int?
    score       Float
    User        User?  @relation(fields: [userId], references: [id])
    userId      Int?   @unique
}

model Series {
    id          Int    @id @map("_id")
    title       String
    description String
    releaseYear Int
    poster_img  String
    genre       Genre? @relation(fields: [genresId], references: [id])
    genresId    Int?   @unique
    score       Float
    User        User?  @relation(fields: [userId], references: [id])
    userId      Int?   @unique
}

model Genre {
    id     Int      @id @map("_id")
    name   String   @unique
    movies Movie[] // Array of references to movies in this genre
    series Series[] // Array of references to series in this genre
}
