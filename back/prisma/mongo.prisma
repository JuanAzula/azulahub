generator client {
    provider        = "prisma-client-js"
    previewFeatures = []
    output          = "./generated/mongo_client"
}

datasource db {
    provider = "mongodb"
    url      = env("MONGO_URL")
}

// schema.prisma

model Users {
    id       String   @id @default(auto()) @map("_id") @db.ObjectId
    email    String   @unique
    password String
    name     String
    movies   Movies[]
    series   Series[]
}

model Movies {
    id          String  @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    releaseYear Int
    poster_img  String
    genre       String
    score       Float
    Users       Users?  @relation(fields: [usersId], references: [id])
    usersId     String? @db.ObjectId
}

model Series {
    id          String  @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    releaseYear Int
    poster_img  String
    genre       String
    score       Float
    Users       Users?  @relation(fields: [usersId], references: [id])
    usersId     String? @db.ObjectId
}

model Genres {
    id   String @id @default(auto()) @map("_id") @db.ObjectId
    name String @unique
}
